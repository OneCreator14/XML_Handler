<Application x:Class="XML_Handler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XML_Handler"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="WinAll" TargetType="{x:Type Window}">
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style x:Key="PageAll" TargetType="{x:Type Page}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="570" />
            <Setter Property="Width" Value="620" />
            
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="26" />
            <Setter Property="Padding" Value="2 0" />
        </Style>
        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Setter Property="Height" Value="26" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Padding" Value="0" />
            
        </Style>
        
        <BitmapImage x:Key="addFile" UriSource="/Resources/addFile-64.png"/>
        <BitmapImage x:Key="search" UriSource="/Resources/icon-48.png"/>
    </Application.Resources>
</Application>
